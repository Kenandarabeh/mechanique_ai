// Prisma Schema for Mechanic AI Chatbot
// Supports SQLite (default) and PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Using PostgreSQL for production
  url      = env("DATABASE_URL")
}

// User's chat conversations
model Chat {
  id        String   @id @default(cuid())
  userId    String   // Clerk user ID
  title     String   // First message as title
  messages  Message[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// Individual messages in a chat
model Message {
  id        String   @id @default(cuid())
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  role      String   // "user" or "assistant"
  content   String   // The message text
  createdAt DateTime @default(now())

  @@index([chatId])
}

// User accounts (custom auth)
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Hashed password
  name      String?
  verified  Boolean  @default(false)
  isAdmin   Boolean  @default(false) // Super Admin flag
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([isAdmin])
}

// Email verification codes (OTP)
model VerificationCode {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

// Car Parts/Pieces for spare parts management
model CarPart {
  id          String   @id @default(cuid())
  nameAr      String   // Arabic name
  nameEn      String   // English name
  nameFr      String   // French name
  category    String   // Engine, Brakes, Electrical, etc.
  priceDZD    Float    // Price in Algerian Dinars
  brand       String?  // Brand (optional)
  compatible  String?  // Compatible car models
  inStock     Boolean  @default(true)
  stockCount  Int      @default(0)
  description String?  // Additional description
  imageUrl    String?  // Image URL (optional)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([nameAr])
  @@index([nameEn])
}
