// Prisma Schema for Mechanic AI Chatbot
// Supports SQLite (default) and PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Using PostgreSQL for production
  url      = env("DATABASE_URL")
}

// User's chat conversations
model Chat {
  id        String   @id @default(cuid())
  userId    String   // Clerk user ID
  title     String   // First message as title
  messages  Message[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// Individual messages in a chat
model Message {
  id        String   @id @default(cuid())
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  role      String   // "user" or "assistant"
  content   String   // The message text
  createdAt DateTime @default(now())

  @@index([chatId])
}

// User accounts (custom auth)
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Hashed password
  name      String?
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

// Email verification codes (OTP)
model VerificationCode {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}
